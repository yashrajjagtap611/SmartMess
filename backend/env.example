# ===========================================
# SmartMess Backend Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env file to version control

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Application environment (development, production, test)
NODE_ENV=development

# Server configuration
PORT=5000
HOST=localhost

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:5173

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb://localhost:27017/SmartMess

# Database connection settings
DB_CONNECTION_TIMEOUT=30000
DB_MAX_POOL_SIZE=10

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# JWT secret key (minimum 32 characters, use a strong random string)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# JWT token expiration
JWT_EXPIRES_IN=30d

# JWT refresh token expiration
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# RATE LIMITING
# ===========================================
# Rate limiting window in milliseconds
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (much higher for development)
RATE_LIMIT_MAX_REQUESTS=10000

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP server configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# Email sender name
EMAIL_FROM_NAME=SmartMess

# Disable email sending in development (for testing)
DISABLE_EMAIL=false

# ===========================================
# OTP (One-Time Password) CONFIGURATION
# ===========================================
# OTP expiration time in minutes
OTP_EXPIRY_MINUTES=10

# OTP length (number of digits)
OTP_LENGTH=6

# ===========================================
# CLOUDINARY CONFIGURATION
# ===========================================
# Cloudinary cloud name
CLOUDINARY_CLOUD_NAME=your-cloud-name

# Cloudinary API key
CLOUDINARY_API_KEY=your-api-key

# Cloudinary API secret
CLOUDINARY_API_SECRET=your-api-secret

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size in bytes (5MB)
MAX_FILE_SIZE=5242880

# Upload directory
UPLOAD_DIR=uploads

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=logs/app.log

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Session secret (for session management if needed)
SESSION_SECRET=your-session-secret-key

# ===========================================
# PAGINATION CONFIGURATION
# ===========================================
# Default page size
DEFAULT_PAGE_SIZE=10

# Maximum page size
MAX_PAGE_SIZE=100

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
# Web push notification VAPID keys (for PWA)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# ===========================================
# PAYMENT CONFIGURATION
# ===========================================
# Razorpay configuration (for credit purchases)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Stripe configuration (if implementing payments)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# PayPal configuration (if implementing payments)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# ===========================================
# MONITORING & ANALYTICS (Future Use)
# ===========================================
# Sentry DSN for error tracking
SENTRY_DSN=your-sentry-dsn

# Google Analytics ID
GA_TRACKING_ID=your-ga-tracking-id

# ===========================================
# CACHE CONFIGURATION (Future Use)
# ===========================================
# Redis configuration (if implementing caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# ===========================================
# TESTING CONFIGURATION
# ===========================================
# Test database URI
TEST_DB_URI=mongodb://localhost:27017/SmartMess_test

# Test email configuration
TEST_EMAIL_HOST=smtp.mailtrap.io
TEST_EMAIL_PORT=2525
TEST_EMAIL_USER=your-test-email
TEST_EMAIL_PASS=your-test-password

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Enable debug mode
DEBUG=false

# Enable detailed logging
VERBOSE_LOGGING=false

# Auto-reload on file changes (for development)
AUTO_RELOAD=true 